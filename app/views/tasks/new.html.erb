<div class= 'container'>
  <h1>Creating new task</h1>
  <%= simple_form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <br>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <br>
    <%= f.submit %>
  <% end %>
</div>
