<div class='container'>
  <h1>My task</h1>

  <div class="task-info">
    <%= @task.details %>

    <% if @task.completed %>
      <p>This task is completed </p>
    <% else %>
      <p>This task is not completed yet</p>

    <% end %>
  </div >
  <div class="options">
    <button><%= link_to 'Back to list', tasks_path %></button>
    <button><%= link_to 'Edit task', tasks_edit_path %></button>
    <button><%= link_to "Delete #{@task.title}",
                task_path(@task),
                method: :delete,
                data: { confirm: "Are you sure?" } %></button>
  </div>
</div>
